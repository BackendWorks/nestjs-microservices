{
  // Validate JavaScript and TypeScript files with ESLint
  "eslint.validate": ["javascript", "typescript"],

  // Enable formatting and fixing ESLint issues on save
  "editor.codeActionsOnSave": {
    "source.formatDocument": "explicit",
    "source.fixAll.eslint": "explicit"
  },

  // Set the default formatter to Prettier
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": false,

  // Specific formatter for Prisma schema files
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },

  // YAML schema configuration for specific file
  "yaml.schemas": {
    "https://json.schemastore.org/kong_json_schema.json": "file:///home/harsh-simform/nestjs-microservices/kong/conf/kong.yml"
  },

  // Specific formatter for dotenv files
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },

  // Specific formatter for shell script files
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },

  // Specific formatter for Dockerfile files
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },

  // Specific formatter for Markdown files
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Specific formatter for ignore files
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },

  // Specific formatter for properties files
  "[properties]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },

  "[conf]": {
    "editor.formatOnSave": false
  },

  // Enable editor code lenses for better visibility of references and tests
  "editor.codeLens": true,

  // Enable breadcrumbs for better file navigation
  "breadcrumbs.enabled": true,

  // Configure tab size and ensure using spaces for indentation
  "editor.tabSize": 2,
  "editor.insertSpaces": true,

  // Enable auto closing and auto pairing of quotes and brackets
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingQuotes": "always",
  "editor.autoSurround": "brackets",

  // Configure file exclude settings
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/bower_components": true
  },

  // Configure search exclude settings to speed up search operations
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/dist": true,
    "**/build": true
  }
}
